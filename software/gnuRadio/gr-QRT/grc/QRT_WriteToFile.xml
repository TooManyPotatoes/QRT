<?xml version="1.0"?>
<block>
  <name>WriteToFile</name>
  <key>QRT_WriteToFile</key>
  <category>QRT</category>
  <import>import QRT</import>
  <make>QRT.WriteToFile($tname, $nf, $scale, $fs, $path, $flo)</make>
 <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Telescope Name</name>
    <key>tname</key>
    <type>string</type>
  </param>
  <param>
    <name>nf</name>
    <key>nf</key>
    <value>1024</value>
    <type>int</type>
  </param>
  <param>
    <name>scale</name>
    <key>scale</key>
    <value>'density'</value>
    <type>string</type>
  </param>
  <param>
    <name>fs</name>
    <key>fs</key>
    <value>samp_rate</value>
    <type>float</type>
</param>
<param>
    <name>Write To:</name>
    <key>path</key>
    <type>string</type>
</param>
<param>
    <name>Local Frequency</name>
    <key>flo</key>
    <value>1.4e9</value>
    <type>int</type>
</param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$nf</vlen>
  </sink>
</block>